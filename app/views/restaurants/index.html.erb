<div id="root"class="container">
  <div class="row">
    <h1 class="title">前台網站</h1>
    <ul class="center">
      <li><%= link_to "全部分類", root_path, class: "option active" %></li>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category_path(category), class: "option"%></li>
      <% end %>
      <div class="clearfix"></div>
    </ul>
    <hr>
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%= link_to restaurant_path(restaurant) do %>
                <%= image_tag restaurant.image, class: "img-responsive center-block" %>
            <% end %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p class="label label-default"><%= restaurant.category.name %><p>
            <p><%= truncate(restaurant.description, length: 40) %></p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
  </div>

</div>
