<div id="feeds" class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to "Home", restaurants_path %>
      </li>
      <li role="presentation">
        <%= link_to "Feeds", feeds_restaurants_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to "Top10人氣餐廳", ranking_restaurants_path %>
      </li>
    </ul>
    <h2 class="title">Top 10 人氣餐廳</h2>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">最新餐廳</h3>
        </div>
        <div class="panel-body">
          <% @ranking_restaurants.each do |restaurant| %>
            <div class="info">
              <h4 class="title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
              <h6 class="subtitle"><%= restaurant.category.name %></h6>
            </div>
            <div class="clearfix"></div>
            <p><%= restaurant.description %></p>
            <hr>
          <% end %>
        </div>
      </div>
  </div>
</div>
