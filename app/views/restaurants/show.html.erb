<div id="show">
  <div class="container">
    <div class="row">
      <div class="col-md-12 title">
        <h1><%= @restaurant.name %></h1>
      </div>
      <div>
        <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
        </div>
        <div class="clearfix"></div>
        <br>
        <div class="well">
          <ul class="list-unstyled">
            <li>
              <strong>Category:</strong>
              <%= @restaurant.category.name %></li>
            <li>
              <strong>Opening Hour:</strong>
              <%= @restaurant.opening_hours %></li>
            <li>
              <strong>Tel:</strong>
              <%= @restaurant.tel %></li>
            <li>
              <strong>Address:</strong>
              <%= @restaurant.address %></li>
          </ul>
      </div>
      <div class="col-md-8">
        <%= simple_format @restaurant.description %>
      </div>
      <div class="clearfix"></div>

      <div class="col-md-3 col-xs-12">
        <%= link_to "Back to index", restaurants_path, class: "button" %>
      </div>
      <div class="clearfix"></div>
      <hr>
      <!-- 留言顯示區 -->
      <% @restaurant.comments.each do |comment| %>
        <div>
          <h4><%= comment.user.email.split("@").first %></h4>
          <p><%= comment.content %></p>
          <p class="text_muted">
            <em><%= time_ago_in_words(comment.created_at) %> ago</em>
          </p>
        </div>

        <hr>
      <% end %>

      <!-- 留言功能 -->
      <%= form_for [@restaurant, @comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "留個言吧", class: "form-control"%>
      </div>
        <div class="form-group">
          <%= f.submit class: "button" %>
          <%= f.button "Cancel", type: :reset, class: "button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
