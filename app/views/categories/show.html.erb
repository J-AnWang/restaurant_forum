<div id="root" class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <%= link_to "Home", restaurants_path %>
      </li>
      <li role="presentation">
        <%= link_to "Feeds", feeds_restaurants_path %>
      </li>
    </ul>
    <ul class="center">
      <li class="option"><%= link_to "全部分類", root_path %></li>
      <% @categories.each do |category| %>
        <li role="presentation" class="option <%= " active" if category == @category %>">
          <%= link_to category.name, category_path(category)%>
        </li>
      <% end %>
      <div class="clearfix"></div>
    </ul>
    <%= render partial: "shared/restaurant_list" %>
  </div>
</div>
