<div class="container">

  <h1 class="title">餐廳分類總表</h1>

  <div class="row">

    <div class="right">
      <%= link_to "Restaurant", admin_restaurants_path , class: "front-a"%>
      <%= link_to "Categories", admin_categories_path %>
    </div>

    <div class="clearfix"></div>

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>

            <tr>
              <th scope="row"><%= category.id %></th>
              <td><%= category.name %></td>
            </tr>

          <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>
